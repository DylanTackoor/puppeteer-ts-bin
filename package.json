{
  "name": "puppeter-ts-bin",
  "version": "0.0.1",
  "bin": {
    "main": "dist/index.js"
  },
  "scripts": {
    "start": "tsc && node dist/index.js start",
    "build": "tsc && rm -rf build && pkg . --out-path build",
    "postbuild": "cp -R ./node_modules/puppeteer/.local-chromium build/chromium",
    "dockerBuild": "tsc && rm -rf build && pkg . --out-path build",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "path": "^0.12.7",
    "pkg": "^5.5.2",
    "puppeteer": "^13.5.1"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.10",
    "prettier": "^2.6.1",
    "typescript": "^4.6.3",
    "yargs": "^17.4.0"
  }
}
